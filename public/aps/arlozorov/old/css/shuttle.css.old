body::before {
  content: "xs";
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999999;
  background-color: #000;
  color: #fff;
}
@media (min-width : 768px) { body::before { content: "sm"; }}
@media (min-width : 992px) { body::before { content: "md"; }}
@media (min-width : 1200px) { body::before { content: "lg"; }}

/* Info */
.info-container {
	margin-left: auto;
	margin-right: auto;
	width: 80%;	/*640px;*/
}
.col-1 {
	padding-left: 10px !important;
	width: 35%;
}
.col-2 {
	width: 15%;
}
.col-3 {
	width: 25%;
}
.col-4 {
	width: 25%;
}
.hide {
	display: none;
}
/* Sensors */
.sensor {
  position: absolute;
  height: 18px;
  width: 18px;
  -moz-border-radius: 50%;
  -webkit-border-radius: 50%;
  border-radius: 50%;
  cursor: pointer;
  background-color: #c0c0c0;
}
.sensor-off {
  background-color: #e3f6ce;
}
.sensor-on {
  background-color: #00ff00;
}
